<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"/>

        <!-- Botón para Registrar Alumno -->
        <Button
            android:id="@+id/btnRegisterStudent"
            style="@style/Widget.Material3.Button"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/primary_color"
            android:text="Registrar Alumno"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <!-- Botón para Registrar Notas -->
        <Button
            android:id="@+id/btnRegisterGrades"
            style="@style/Widget.Material3.Button"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/primary_color"
            android:text="Registrar Notas"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <!-- Botón para Lista de Alumnos -->
        <Button
            android:id="@+id/btnStudentList"
            style="@style/Widget.Material3.Button"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/primary_color"
            android:text="Lista de Alumnos"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:backgroundTint="@color/accent_color"
            android:textColor="@color/primary_text"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>